{
  "name": "bitpoint",
  "version": "0.0.1",
  "description": "REST API using Node with typescript, KOA framework. TypeORM for SQL. Middlewares JWT, CORS, Winston Logger.",
  "main": "src/index.ts",
  "scripts": {
    "watch": "nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node src/index.ts",
    "build-ts": "tsc",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "tslint -c tslint.json -p tsconfig.json --fix",
    "serve": "node dist/server.js",
    "build": "npm run lint && npm run build-ts",
    "start": "ts-node src/index.ts",
    "typeorm": "ts-node ./node_modules/.bin/typeorm -c bitpoint"
  },
  "author": "Murtaza Nathani",
  "license": "MIT",
  "keywords": [
    "typescript",
    "koa",
    "koa2",
    "jwt",
    "winston",
    "rest",
    "starter",
    "typeORM",
    "class-validator",
    "helmet",
    "sql",
    "api",
    "cors"
  ],
  "repository": "github:javieraviles/node-typescript-koa-rest",
  "devDependencies": {
    "@koa/cors": "^2.2.1",
    "@types/dotenv": "^4.0.3",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/koa": "2.0.44",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-router": "^7.0.28",
    "@types/koa__cors": "^2.2.2",
    "@types/node": "^8.0.29",
    "nodemon": "^1.17.4",
    "ts-node": "3.3.0",
    "tslint": "^5.10.0",
    "typescript": "2.5.2"
  },
  "dependencies": {
    "class-validator": "^0.9.1",
    "dotenv": "^6.0.0",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^4.0.0",
    "koa-router": "^7.4.0",
    "pg": "^7.4.3",
    "mysql2": "^1.6.1",
    "jsonwebtoken": "^8.3.0",
    "pg-connection-string": "^2.0.0",
    "reflect-metadata": "^0.1.10",
    "typeorm": "0.2.7",
    "winston": "^3.0.0"
  }
}